
#include "stdio.h"
int main()
{
	int age,x;
	printf("Введите возраст: \n");
	scanf("%d", &age);
	if (age > 4 && age < 21) {
		printf("%d лет\n", age);
	}
	else
	{
		x = age % 10;
		if (x == 0 || (x > 4 && x < 10)) {
			printf("%d лет\n", age);
		}
		if (x == 1) {
			printf("%d год\n", age);
		}
		if (x > 1 && x < 5) {
			printf("%d года\n", age);
		}
	}
	return 0;
} 
